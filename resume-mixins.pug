mixin timeline-item(title, place, address, from_date, to_date, details, highlight)
  .timeline-item
    header
      h3.medium-title= title
        span.date
          if from_date
            = from_date
          if to_date
            = " - " + to_date
    div.item-location
      if place && !highlight
        span.place= place
      if place && highlight
        span.place.highlight= place
      if address
        span.address= address

    if details
      span.details= details
    if block
      .description
        block

mixin interest(icon, label)
  .interest
    i.icon(class="icon-"+icon)
    p.label= label
