mixin contact-item(name, value)
    .item
        img.icon(src="../../icons/" + name + ".svg")
        span.value!= value
        
mixin hobbies-item(name, value)
    .item
        img.icon(src="../../icons/" + name + ".svg")
        span.value= value

mixin skill-section(title, ...items)
    .title= title
    ul
        each item in items
            li= item
