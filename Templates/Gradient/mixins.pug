mixin title(name, job_title)
    h1#title= name
    #clip 
        h1= job_title

mixin experiences-item(from_date, to_date, title, place, city, description, ...details)
    .timeline-item
        .timeline-graphics
            .line
            .circle
            .line-long
        .timeline-content
            .date 
                if from_date
                    = from_date
                if to_date
                    = " - " + to_date
            .title= title
            .place= place + " - " + city
            if description
                p.description= description
            if details
                ul.details
                    each detail in details
                        li!= detail

